<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.sort_by(&:name).each do |recipe| %>
      <tr>
        <td><%= recipe.course %></td>
        <td><%= link_to recipe.name, recipe %></td>
        <td><%= recipe.description %></td>
        <td><%= image_tag(recipe.picture_url) if recipe.picture.present? %></td>
        <td><%= link_to image_tag("https://image.flaticon.com/icons/svg/61/61456.svg",class:"icon_edit"), edit_recipe_path(recipe) %></td>
        <td><%= link_to image_tag("https://cdn1.iconfinder.com/data/icons/web-ui-2/16/UI_Icons_Outline-28-512.png",class:"icon_trashbin"), recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
